{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event Schema",
  "type": "object",
  "required": ["title", "start_date"],
  "properties": {
    "type": {
      "type": "string",
      "const": "event"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "start_date": {
      "type": "string",
      "format": "date"
    },
    "end_date": {
      "type": "string",
      "format": "date"
    },
    "host": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "location_name": {
      "type": "string"
    },
    "location_address": {
      "type": "string"
    },
    "location_lat": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "location_lng": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    },
    "registration_url": {
      "type": "string",
      "format": "uri"
    },
    "featured_image": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "publish", "private"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "initiatives": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "external_id": {
      "type": "string"
    }
  }
}