{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Podcast Schema",
  "type": "object",
  "required": ["title"],
  "properties": {
    "type": {
      "type": "string",
      "const": "podcast"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "episode_number": {
      "type": "integer",
      "minimum": 1
    },
    "audio_url": {
      "type": "string",
      "format": "uri"
    },
    "duration": {
      "type": "string",
      "pattern": "^([0-9]{1,2}:)?[0-9]{2}:[0-9]{2}$"
    },
    "guests": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "show": {
      "type": "string"
    },
    "date_published": {
      "type": "string",
      "format": "date-time"
    },
    "featured_image": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "publish", "private"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "initiatives": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "external_id": {
      "type": "string"
    }
  },
  "anyOf": [
    {
      "required": ["audio_url"]
    },
    {
      "required": ["episode_number"]
    }
  ]
}