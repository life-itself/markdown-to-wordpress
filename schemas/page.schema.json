{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Page Schema",
  "type": "object",
  "required": ["title", "slug"],
  "properties": {
    "type": {
      "type": "string",
      "const": "page"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "description": {
      "type": "string"
    },
    "template": {
      "type": "string"
    },
    "parent_slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "featured_image": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "publish", "private"]
    },
    "external_id": {
      "type": "string"
    }
  }
}